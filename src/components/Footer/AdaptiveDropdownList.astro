---
import Arrow from "../Icons/Arrow.astro";
const { items } = Astro.props;
---

<li class="fap-item-menu" data-grid-area={`area-${items.id}`}>
  <input hidden type="radio" name={`footer`} id={`item-${items.id}`} />
  <a class="fap-item-menu-title-dropdown" href={items?.path}>{items?.title}</a>
  <label for={`item-${items.id}`}><Arrow /></label>
  <div class="fap-item-menu-dropdown">
    <ul>
      {
        items?.items?.map( item =>
            <li>
                <a href={item.path}>{item.title}</a>
            </li>
        )
      }
    </ul>
  </div>
</li>

<style lang="scss" is:global>
  .fap-item-menu {
    display: flex;
    flex-wrap: wrap;
    border-bottom: 1px solid transparent;

    padding: 1em 0 0;

    &:not(:last-child) {
      border-bottom: 1px solid var(--color-medium-gray);
      @media (width > 768px) {
        border-bottom: 1px solid transparent;
      }
    }



    & label {
      flex: 1;
      text-align: right;
      & svg {
        transition: all 0.35s;
      }
      @media (width > 768px) {
        display: none;
      }
    }

    & input:checked {
        & ~ a {
            color: var(--color-primary);
        }
        & ~ label svg {
            transform: rotate(180deg);
        }
        & ~ label svg path {
            stroke: var(--color-primary);
        }
    }

    & a:hover {
        color: var(--color-primary);
    }
  }
  .fap-item-menu-title-dropdown {
    text-transform: uppercase;
    font-size: 1em;
    font-weight: 500;
    color: var(--color-dark-gray);
  }
  .fap-item-menu-dropdown {
    width: 100%;
    margin: .5em;

    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 500ms;

    @media (width > 768px) {
      margin: .5em .5em .5em 0;
      grid-template-rows: 1fr;
    }
  }

  .fap-item-menu-dropdown > ul {
    display: flex;
    flex-direction: column;
    gap: .35em;
    overflow: hidden;
    @media (width > 768px) {
      width: max-content;
    }
    
  }

  input:checked ~ .fap-item-menu-dropdown {
    grid-template-rows: 1fr;
  }
</style>
