---
import Telegram from "../Icons/Telegram.astro";
import VK from "../Icons/VK.astro";
---

<li class="fap-footer-item-menu" data-grid-area="s">
    <h3 class="fap-footer-item-menu-title-dropdown">Мы в социальных сетях</h3>
    <ul class="fap-footer-item-menu-social">
        <li><a href="https://vk.com/fineartprintru"><VK /></a></li>
        <li><a href="https://t.me/Fineartprint"><Telegram /></a></li>
    </ul>
</li>

<style lang="scss" is:scoped>
    .fap-footer-item-menu-title-dropdown {
        font-family: "FontMedium", Roboto, Helvetica, sans-serif;
        margin: 0;
        padding: 0 0 1em;
    }
    .fap-footer-item-menu-social {
        @media (width < 992px) {
            padding: 0 0 1em;
        }
    }
</style>

<style lang="scss" is:global>
    .fap-footer-item-menu {
        @media (min-width: 992px) {
            padding: 0;
        }
    }
    .fap-footer-item-menu-social {
        width: 100%;
        display: flex;
        align-items: center;
        gap: .5em;
        padding: 0 0 1em;
        & svg circle {
            transition: var(--animate-default);
        }
        & a:hover svg circle {
            fill: var(--color-primary);
        }
        
    }
    
</style>